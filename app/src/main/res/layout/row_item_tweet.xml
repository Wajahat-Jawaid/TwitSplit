<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:padding="@dimen/ri_tweet_parent_p">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_user" />

    <TextView
        android:id="@+id/tv_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ri_tweet_fullname_m_s"
        android:fontFamily="@font/roboto_bold"
        android:maxLength="18"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text_dark"
        app:layout_constraintEnd_toStartOf="@+id/tv_username"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        tools:text="Hello" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ri_tweet_username_m_s"
        android:maxLength="18"
        android:text="@string/app_name"
        android:textColor="@color/text_light"
        app:layout_constraintStart_toEndOf="@+id/tv_full_name"
        tools:text="Hello" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ri_tweet_duration_m_s"
        android:text="@string/app_name"
        android:textColor="@color/text_light"
        app:layout_constraintStart_toEndOf="@+id/tv_username"
        tools:text="Hello" />

    <TextView
        android:id="@+id/tv_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ri_tweet_tweet_m_s"
        android:layout_marginTop="@dimen/ri_tweet_tweet_m_t"
        android:text="@string/app_name"
        android:textColor="@color/text_normal"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        tools:text="Hello" />
</android.support.constraint.ConstraintLayout>